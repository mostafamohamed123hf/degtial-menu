{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "public/**",
          "assets/**",
          "admin/**",
          "sounds/**",
          "service-worker.js",
          "manifest.json"
        ]
      }
    }
  ],
  "routes": [{ "src": "/(.*)", "dest": "server.js" }]
}
